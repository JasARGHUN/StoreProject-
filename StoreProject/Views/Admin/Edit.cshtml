@model Product

@{ 
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

    <div class="card card-columns p-2 bg-light">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="ProductID" />

            <div class="form-group">
                <h4><label asp-for="Name"></label></h4>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <h4><label asp-for="Image"></label></h4>
                <input asp-for="Image" type="file" class="form-control" />
            </div>

            <div class="form-group">
                <h4><label asp-for="Description"></label></h4>
                <div><span asp-validation-for="Description" class="text-danger"></span></div>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <h4><label asp-for="Category"></label></h4>
                <div><span asp-validation-for="Category" class="text-danger"></span></div>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="form-group">
                <h4><label asp-for="Price"></label></h4>
                <div><span asp-validation-for="Price" class="text-danger"></span></div>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="text-center">
                <button class="btn btn-success" type="submit">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>