<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />

    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />

    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <title>Some Store</title>

</head>
<body>
    <div class="card p-1 mb-5">
        <div class="navbar navbar-light bg-light border" role="navigation">
            <a class="col navbar-brand row text-left" asp-action="List" asp-controller="Product">
                <img src="~/images/NoImg.jpg" height="40" width="40"  class="rounded-circle"/>
            </a>

            <div class="col-2 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>

        <div class="row m-1 p-1">
            <div id="categories" class="col-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>